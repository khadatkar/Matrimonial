@model GYMONE.Models.LoginUserVM

@{
    ViewBag.Title = "Login";
}

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@*<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@

@*<link href="~/Content/Site.css" rel="stylesheet" />*@


@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<div id="mainContent">

    <section class="container">

        <div class="innerContainer">

            <div class="row">

                <div id="myWizard" class="formArea LRmargin">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-4 col-md-offset-4 col-xs-12">
                            @*<img alt="" src="~/Images/shlogo.png" />*@
                            <img alt="" class="img-responsive" src="~/Images/shlogo.png" />
                             @*<h1 style="color:white; padding:25px;">शुभ मंगल विवाह संस्था</h1>*@
                            @*<h1 style="font-family: 'Engagement', cursive;font-size: 42px;color:white;">
                                Shubh Mangal
                            </h1>*@
                        </div>
                        
                        <div class="col-md-4 col-md-offset-4 col-xs-12">
                            <div class="loginPage panel panel-info">
                                <div class="form-group">
                                    <span class=""><i class="glyphicon glyphicon-user"></i>User</span>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Username)
                                </div>
                                <div class="form-group">
                                    <span class=""><i class="glyphicon glyphicon-lock"></i>Password</span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password)

                                </div>
                                <div class="form-group">

                                    @*<input type="submit" value="Login" class="btn btn-default" />*@
                                    @*&nbsp;<a href="/account/create-account">Create an account</a>*@
                                    

                                    <input id="BtnLogin" type="submit" class="btn btn-success btn-pressure" name="BtnLogin" value="Login" style="margin:5px;" />
                                    <input id="BtnReset" type="reset" class="btn btn-info btn-pressure" name="BtnReset" value="Reset" style="margin:5px;" />
                                    &nbsp;@*<a href="/RegisterMember/Create">Create an account</a>*@
                                </div>
                            </div>
                        </div>
  

                    }
                </div>
            </div>
        </div>
    </section>
</div>
