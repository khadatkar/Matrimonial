@model GYMONE.Models.StateMasterDTO

@{
    ViewBag.Title = "Add State";
}

@if (TempData["notice"] != null)
{<div class="alert alert-success" style="float: none;" role="alert">
    <b>@TempData["notice"]</b>
    </div>

}



<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />


<script type="text/javascript">
    $.noConflict();
</script>
<div class="container">

    <div class="logo col-sm-12 text-center col-md-12 ">
        <img alt="" src="~/Images/shlogo.png" />
    </div>

    <div class="clearfix"></div>

    @using (Html.BeginForm())
    {    
        @Html.ValidationSummary(true)
         @Html.AntiForgeryToken()
        <fieldset>
            <legend class="legend">Add State</legend>

            <div class="panel">

                <div class="panel-body">

                     <div>
                    @Html.ActionLink("State List", "Index", "State", new { @class = "btn btn-info btn-pressure" })
                </div>

                    <br />

                    <div class="row">
                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.State)
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.State)
                        </div>

                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.CountryID)
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.CountryID, new SelectList(Model.ListCountry, "Id", "Country"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CountryID)
                        </div>
                    </div>
                    <div style="margin-top: 5px"></div>
                    
                    <div style="margin-top: 5px"></div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-success" value="Create" />
                            @Html.ActionLink("Cancel", "Index", "State", new  {  @class="btn btn-success"})
                            
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    }

   

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
