@model GYMONE.Models.UserDTO

@{
    ViewBag.Title = "Login";
}

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div id="mainContent">
    <section class="container">

        <div class="innerContainer">

            <div class="row">
                <div id="myWizard" class="formArea LRmargin">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div id="divMessage" class="text-center col-md-4 col-sm-4 col-md-offset-4">

                            @Html.ValidationSummary()
                        </div>
                        @*<div class="text-center col-sm-12  col-md-12">
                            <a class="navbar-brand" href="index.html">
                                <h1 style="font-family: 'Engagement', cursive;font-size: 42px;color:white;">
                                    Shubh Mangal
                                </h1>
                            </a>
                        </div>*@
                        <div class="logo col-sm-12 text-center col-md-12 ">
                            @*<img alt="" src="~/Images/shlogo.png" />*@
                            <h1 style="font-family: 'Engagement', cursive;font-size: 42px;color:white;">
                                Shubh Mangal
                            </h1>
                        </div>
                        <div class="col-md-4 col-md-offset-4 col-xs-12">
                            <div class="loginPage panel panel-info">
                                <div class="form-group">
                                    <span class=""><i class="glyphicon glyphicon-user"></i>User</span>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Username)
                                </div>
                                <div class="form-group">
                                    <span class=""><i class="glyphicon glyphicon-lock"></i>Password</span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password)

                                </div>
                                <div class="form-group">
                                    <input id="BtnLogin" type="submit" class="btn btn-success btn-pressure" name="BtnLogin" value="Login" />
                                    <input id="BtnReset" type="reset" class="btn btn-info btn-pressure" name="BtnReset" value="Reset" />
                                </div>
                            </div>
                        </div>

                    }

                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </section>
</div>


