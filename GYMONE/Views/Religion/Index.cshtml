@model IEnumerable<GYMONE.Models.ReligionDTO>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
<link href="~/Content/Site.css" rel="stylesheet" />


<div class="container">


    <div class="clearfix"></div>

    <fieldset>
        <legend class="legend">Religion</legend>


        <div class="panel">

            <div class="panel-body">
                <div>
                    @Html.ActionLink("Create Religion", "Create", "Religion", new { @class = "btn btn-info btn-pressure" })
                </div>



                @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.Id).Titled("ID").Filterable(true).Encoded(false)
        .Sanitized(false).SetWidth(50);
                        columns.Add(c => c.Religion).Titled("Religion").Filterable(true).Encoded(false)
        .Sanitized(false).SetWidth(50);

                        columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(20)
        .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.Id })).Titled("Edit");
                        columns.Add()
   .Encoded(false)
   .Sanitized(false)
   .SetWidth(30)
   .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Religion?');" })).Titled("Delete");

                    }).WithPaging(10).Sortable(true)

            </div>
        </div>
    </fieldset>

</div>
